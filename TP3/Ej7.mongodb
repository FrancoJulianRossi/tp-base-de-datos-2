use('tiendaOnline')
db.productos.aggregate([
    {
        $project: {
            categoriaPrecios: {
                $cond: {
                    if: { $lt: ["$precio", 100] }, then: "economico",
                    else: {
                        $cond: {
                            if: { $lt: ["$precio", 500] }, then: "estandar",
                            else: "premiun"
                        }
                    }
                }
            }
        }
    },
    {
        $group: {
            _id: "$categoriaPrecios",
            sumProd: { $sum: 1 }
        }
    }
])

